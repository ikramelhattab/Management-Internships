{# intégrer code de l'entete dans le fichier _header.html.twig    #}

{% include "_header.html.twig" %}

{#   title de page  #}

{% block title %}{% endblock %}

{% block body %}
<br><br>
    <h1>Projet</h1>
    <br>
{# table contient les champs de projet specifier   #}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ projet.id }}</td>
            </tr>
            <tr>
                <th>Specialite</th>
                <td>{{ projet.specialite }}</td>
            </tr>
            <tr>
                <th>Technologie</th>
                <td>{{ projet.technologie }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ projet.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ projet.image }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ projet.duree }}</td>
            </tr>
            <tr>
                <th>Encadrant</th>
                <td>{{ projet.encadrant }}</td>
            </tr>
        </tbody>
    </table>
{# retour à la liste de projets    #}

    <a href="{{ path('projet_index') }}">back to list</a>
{# modifier projet selon id   #}

    <a href="{{ path('projet_edit', {'id': projet.id}) }}">edit</a>
